extends ../layouts/common.pug
block content
	h1 Create user
	if error
		each err in error
			.alert.alert-danger=err
	form(action="/users/create" method="POST")
		.form-group
			label(for="name") Name 
			input.form-control(id="name" name="name" type="text" value=value ? value.name : "")
		.form-group
			label(for="phone") Phone 
			input.form-control(id="phone" name="phone" type="text" value=value ? value.phone : "")
		button.btn.btn-primary Create